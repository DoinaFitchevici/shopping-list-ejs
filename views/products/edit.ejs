<%- include("../partials/head.ejs", { title: "Edit Product" }) %>
<%- include("../partials/header.ejs") %>
<%- include("../partials/messages.ejs") %>

<h1>Edit Product</h1>

<form method="POST" action="/products/update/<%= product._id %>" class="form">
    <div class="form-group">
  <div>
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" value="<%= product.name %>" required />
  </div>
  <div>
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="<%= product.price.toFixed(2) %>" step="0.01" required />
  </div>
  <div>
      <label for="description">Description:</label>
      <textarea id="description" name="description" maxlength="255"><%= product.description %></textarea>
    </div>
    <br>
    <div>
      <label for="isActive">Is Active:</label>
      <input type="checkbox" id="isActive" name="isActive" <%= product.isActive ? 'checked' : '' %> />
    </div>
    <br>
    <div>
      <label for="tags">Tags:</label>
      <select id="tags" name="tags" multiple>
        <optgroup label="Food and Beverages">
          <option value="Organic">Organic</option>
          <option value="Vegan">Vegan</option>
          <option value="Gluten-Free">Gluten-Free</option>
          <option value="Snacks">Snacks</option>
          <option value="Beverages">Beverages</option>
          <option value="Fresh">Fresh</option>
        </optgroup>
        <optgroup label="Home and Garden">
          <option value="Furniture">Furniture</option>
          <option value="Decor">Decor</option>
          <option value="Kitchen">Kitchen</option>
          <option value="Outdoors">Outdoors</option>
          <option value="Gardening">Gardening</option>
          <option value="Bedding">Bedding</option>
        </optgroup>
        <optgroup label="Beauty and Health">
          <option value="Skincare">Skincare</option>
          <option value="Makeup">Makeup</option>
          <option value="Haircare">Haircare</option>
          <option value="Supplements">Supplements</option>
          <option value="Wellness">Wellness</option>
          <option value="Organic">Organic</option>
        </optgroup>
      </select>
    </div>
  <br />
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  <button type="submit" class="button">Update Product</button>
  </div>
</form>
</div>
<%- include("../partials/footer.ejs") %>
